---
import Navbar from '../components/Navbar.astro'
import Footer from '../components/Footer.astro'
import '../styles/app.css'
import { SITE_TITLE, SITE_DESCRIPTION } from '../constants'
const { title ='Default' } = Astro.props
const { description ='Default' } = Astro.props
import ViewTransitions from 'astro/components/ViewTransitions.astro'

interface Props {
  title?: string;
  description?: string;
  
}
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description}>
    <link rel="icon" href="/favicon.svg">
    <!-- Google tag (gtag.js) -->
    <script type="partytown" async src="https://www.googletagmanager.com/gtag/js?id=G-5YYZ5VFSL0"></script>
    <script type="partytown">
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-5YYZ5VFSL0');
    </script>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.2.0/flowbite.js"
      integrity="sha512-BJ/5sR2hFxQTKin/55JQCcMTObShDBAmVjL/3NR/MVcrhyOazJjAgvROem03+HYyGw16SVdSfoWCFGr9syxAKA=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    ></script>
    <!-- <ViewTransitions /> -->
    <title>{SITE_TITLE} - {title}</title>
  </head>
  <body class="">
    
    <Navbar />
    <div class="mx-auto">
      <slot />
    </div>
    <Footer />
    </body>
  </html>